<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_my_setting"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/my_setting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/my_icon_setting"/>
        </RelativeLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/rl_my_setting"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/my_user_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="15dp"/>
                <TextView
                    android:id="@+id/my_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/my_user_head"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="14dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="番茄用户"/>
                <LinearLayout
                    android:id="@+id/level_back"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:background="@drawable/back_level"
                    app:layout_constraintLeft_toRightOf="@id/my_user_head"
                    app:layout_constraintTop_toBottomOf="@id/my_user_name">
                    <ImageView
                        android:id="@+id/logo_level"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/my_icon_level"/>
                    <TextView
                        android:id="@+id/my_level"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:textColor="#B3842B"
                        android:text="LV1丶经验值 40 >"/>
                </LinearLayout>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/no_Login_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="15dp"
                    android:src="@color/text_gray_99"/>
                <TextView
                    android:id="@+id/no_login_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/no_Login_head"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="番茄用户"
                    android:textStyle="bold"
                    android:textColor="#000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888"
                    app:layout_constraintTop_toBottomOf="@id/no_login_name"
                    app:layout_constraintLeft_toRightOf="@id/no_Login_head"
                    android:layout_marginTop="8dp"
                    android:text="登录后解锁更多技能"/>
                <Button
                    android:id="@+id/go_login"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@drawable/no_login"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/gologin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:id="@+id/cl2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/cl1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <LinearLayout
                android:id="@+id/my_foucus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/focus_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:text="@string/my_focus"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/my_fans"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.38"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fansNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:text="@string/my_fans"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/my_publish"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.65"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fabuNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:text="@string/my_publish"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/my_collection"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.86"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/collectionNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:text="@string/my_collection"/>
            </LinearLayout>
        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/my_cl_task"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@id/cl2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/my_videoVip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_equity"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#333333"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/my_equityNum"
                app:layout_constraintRight_toLeftOf="@id/my_number"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/my_totalNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="/30"
                android:layout_marginRight="5dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/my_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="30"
                android:textColor="#EB5F59"
                app:layout_constraintRight_toLeftOf="@id/my_totalNumber"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/my_user_task"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_videoVip" />
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/my_cl_task">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_wallet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp">
                <ImageView
                    android:id="@+id/my_icon1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="13dp"
                    android:src="@drawable/my_icon_wallet"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/my_icon1"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="成为贵族"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/navi_title_color"
                    android:text="敬请期待"
                    app:layout_constraintRight_toLeftOf="@id/next_icon"/>
                <ImageView
                    android:id="@+id/next_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/icon_next"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_live"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp">
                <ImageView
                    android:id="@+id/my_icon11"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="13dp"
                    android:src="@drawable/my_icon_live"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/my_icon11"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="@string/my_live"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/icon_next"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_exchange"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/my_icon2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="13dp"
                    android:src="@drawable/my_exchange_zone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/my_icon2"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="@string/my_exchange"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/icon_next"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_message"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/my_icon3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="13dp"
                    android:src="@drawable/my_icon_message"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/my_icon3"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="@string/my_message"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/icon_next"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_comment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/my_icon4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="13dp"
                    android:src="@drawable/my_icon_comment"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/my_icon4"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="@string/my_comment"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/icon_next"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_like"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="1dp">
                <ImageView
                    android:id="@+id/my_icon5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="13dp"
                    android:src="@drawable/my_icon_like"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/my_icon5"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="@string/my_like"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/icon_next"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_history"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="1dp">
                <ImageView
                    android:id="@+id/my_icon6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="13dp"
                    android:src="@drawable/my_icon_history"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/my_icon6"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="@string/my_history"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/icon_next"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_feedback"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="1dp">
                <ImageView
                    android:id="@+id/my_icon7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="13dp"
                    android:src="@drawable/my_icon_feedback"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/my_icon7"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="@string/my_feedback"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/icon_next"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_about"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/my_icon8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="13dp"
                    android:src="@drawable/my_icon_about"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/my_icon8"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="@string/my_about"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/icon_next"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_community"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="1dp">
                <ImageView
                    android:id="@+id/my_icon9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="13dp"
                    android:src="@drawable/my_icon_community"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/my_icon9"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="@string/my_community"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/icon_next"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_share"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="1dp">
                <ImageView
                    android:id="@+id/my_icon10"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="13dp"
                    android:src="@drawable/my_icon_share"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/my_icon10"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="App下载地址推广"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/icon_next"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>