<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/friend_find_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="15dp"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:id="@+id/friend_find_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/friend_find_head"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/friend_find_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/friend_find_head"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/find_item_focus"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:background="@drawable/focus"
            android:textColor="@color/white"
            android:text="+关注"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/friend_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_launcher_background"/>
            <TextView
                android:id="@+id/friend_find_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#EB5F59"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/four_head"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ci4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintRight_toLeftOf="@id/ci3"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ci3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintRight_toLeftOf="@id/ci2"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ci2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ci1"
                android:layout_marginRight="5dp"
                app:layout_constraintBottom_toBottomOf="parent" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ci1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintRight_toLeftOf="@id/next"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <ImageView
                android:id="@+id/next"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_next"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/image_Container1"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="5dp"
            android:layout_height="250dp">
            <ImageView
                android:id="@+id/friend_find_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"/>
            <TextView
                android:id="@+id/image_type_1"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/back_friend_tv"
                app:layout_constraintRight_toRightOf="@id/friend_find_one"
                app:layout_constraintBottom_toBottomOf="@id/friend_find_one"/>
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:padding="5dp">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/image_Container2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:id="@+id/friend_find_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="fitXY" />
                <TextView
                    android:id="@+id/image_type_2"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@drawable/back_friend_tv"
                    app:layout_constraintRight_toRightOf="@id/friend_find_two"
                    app:layout_constraintBottom_toBottomOf="@id/friend_find_two"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/image_Container3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/friend_find_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="fitXY" />
                <TextView
                    android:id="@+id/image_type_3"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@drawable/back_friend_tv"
                    app:layout_constraintRight_toRightOf="@id/friend_find_three"
                    app:layout_constraintBottom_toBottomOf="@id/friend_find_three"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/image_Container4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="110dp"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/friend_find_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/image_type_4"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/back_friend_tv"
                app:layout_constraintRight_toRightOf="@id/friend_find_four"
                app:layout_constraintBottom_toBottomOf="@id/friend_find_four"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/image_Container5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="110dp"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/friend_find_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/image_type_5"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/back_friend_tv"
                app:layout_constraintRight_toRightOf="@id/friend_find_five"
                app:layout_constraintBottom_toBottomOf="@id/friend_find_five"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/image_Container6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="110dp"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/friend_find_six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/image_type_6"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/back_friend_tv"
                app:layout_constraintRight_toRightOf="@id/friend_find_six"
                app:layout_constraintBottom_toBottomOf="@id/friend_find_six"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/friend_focus"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv1"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv2"
            android:text="@string/friend_paper"/>
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv3"/>
        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv2"
            android:text="@string/friend_more"/>
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_next"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>