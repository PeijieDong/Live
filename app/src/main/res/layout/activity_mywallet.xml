<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Activity.MyActivity.MywalletActivity">
    <RelativeLayout
        android:id="@+id/wallet_head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/back_gradient">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:src="@drawable/icon_back_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:textColor="@color/white"
            android:text="@string/wallet_detail"/>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/wallet_head">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/back_gradient">
                <TextView
                    android:id="@+id/wallet_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/wallet_balance"/>
                <TextView
                    android:id="@+id/wallet_balance_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/wallet_balance"/>
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toRightOf="@id/wallet_balance_num"
                    app:layout_constraintTop_toBottomOf="@id/wallet_balance"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.design.widget.TabLayout
                android:layout_width="200dp"
                android:layout_height="40dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:id="@+id/my_icon5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/my_icon5"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333333"
                    android:text="订单查询"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/icon_next"/>
            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:text="@string/wallet_des"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="14sp"
                    android:textColor="#989CAA"
                    android:text="@string/wallet_des_details"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp" >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/wallet_question"/>
            <TextView
                android:id="@+id/wallet_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                android:textSize="10sp"
                android:textColor="#666666"
                android:text="@string/wallet_question"/>
        </android.support.constraint.ConstraintLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3.5"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#D7D7D7"
            android:text="@string/wallet_top_up"/>
    </LinearLayout>
</LinearLayout>