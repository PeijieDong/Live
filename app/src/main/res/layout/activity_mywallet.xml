<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".View.Activity.MyChildActivity.My.MywalletActivity">
    <RelativeLayout
        android:id="@+id/wallet_head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/back_gradient">
        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:src="@drawable/icon_back_white"/>
        <TextView
            android:id="@+id/money_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:textColor="@color/white"
            android:text="@string/wallet_detail"/>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/back_gradient">
                <TextView
                    android:id="@+id/wallet_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/wallet_balance"/>
                <TextView
                    android:id="@+id/wallet_balance_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/wallet_balance"/>
                <TextView
                    android:id="@+id/helper"
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:text="问题帮助"
                    android:gravity="center"
                    android:background="@drawable/helper"
                    app:layout_constraintLeft_toRightOf="@id/wallet_balance_num"
                    app:layout_constraintTop_toBottomOf="@id/wallet_balance"/>
            </android.support.constraint.ConstraintLayout>
            <com.mymusic.music.DiyTab.TabLayout
                android:id="@+id/tab"
                android:layout_width="200dp"
                android:layout_height="40dp"
                app:tabIndicatorColor="@color/navi_title_color"
                app:tabIndicatorHeight="3dp"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/fankui"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp" >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/back_quest"
                app:layout_constraintBottom_toTopOf="@id/wallet_question"/>
            <TextView
                android:id="@+id/wallet_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                android:textSize="10sp"
                android:textColor="#666666"
                android:text="@string/wallet_question"/>
        </android.support.constraint.ConstraintLayout>
        <TextView
            android:id="@+id/go_money"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3.5"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/navi_title_color"
            android:text="@string/wallet_top_up"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>