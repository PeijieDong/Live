<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/task_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/task_center_share"/>
        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/task_head"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="#333"
            android:text="邀请用户，下载并登录"/>
        <TextView
            android:id="@+id/task_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="25dp"
            app:layout_constraintLeft_toRightOf="@id/task_head"
            app:layout_constraintTop_toBottomOf="@id/task_title"
            android:text="金币+25  经验+10"/>
        <TextView
            android:id="@+id/over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888"
            app:layout_constraintLeft_toRightOf="@id/task_num"
            app:layout_constraintTop_toBottomOf="@id/task_title"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="12sp"
            android:text="完成"/>
        <TextView
            android:id="@+id/unfinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/navi_title_color"
            app:layout_constraintLeft_toRightOf="@id/over"
            app:layout_constraintTop_toBottomOf="@id/task_title"
            android:layout_marginTop="25dp"
            android:textSize="12sp"
            android:text="4/"/>
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/unfinish"
            app:layout_constraintTop_toBottomOf="@id/task_title"
            android:layout_marginTop="25dp"
            android:text="5"/>
        <TextView
            android:id="@+id/doit"
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:background="@drawable/red_cir"
            android:gravity="center"
            android:text="做任务"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>