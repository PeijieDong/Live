<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.MyChildActivity.My.MylevelActivity">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/icon_level_gb">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="45dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:src="@drawable/icon_back_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="我的等级"/>
    </RelativeLayout>
        <TextView
            android:id="@+id/levelNum"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/icon_level_s"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">
                <LinearLayout
                    android:id="@+id/back1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/icon_user_level_1">
                    <ImageView
                        android:id="@+id/level_back1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/my_icon_level"/>
                    <TextView
                        android:id="@+id/level_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="LV8"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/expNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true" />
                <LinearLayout
                    android:id="@+id/back2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/icon_user_level_1">
                    <ImageView
                        android:id="@+id/level_back2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/my_icon_level"/>
                    <TextView
                        android:id="@+id/level_num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="LV8"/>
                </LinearLayout>
            </RelativeLayout>
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/white"
                android:layout_marginTop="4dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            <TextView
                android:id="@+id/residue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/levelDes"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/icon_description_white"
        android:padding="7dp"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="155dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="230dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintHorizontal_bias="0"
        android:background="@drawable/white_radio">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/level_income_1" />
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image1"
            android:text="看帖权益"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/image1"
            app:layout_constraintTop_toBottomOf="@id/text"
            android:layout_marginTop="8dp"
            android:text="浏览海量帖子"/>
        <ImageView
            android:id="@+id/clock1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="#99FFFFFF"
            android:src="@drawable/icon_level_lock"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint2"
        android:layout_width="155dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="230dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginRight="20dp"
        android:background="@drawable/white_radio">
        <ImageView
            android:id="@+id/image2"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/level_income_2" />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image2"
            android:text="圈子特权"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/image2"
            app:layout_constraintTop_toBottomOf="@id/text2"
            android:layout_marginTop="8dp"
            android:text="圈子中找到真爱"/>
        <ImageView
            android:id="@+id/clock2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="#99FFFFFF"
            android:src="@drawable/icon_level_lock"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint3"
        android:layout_width="155dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/constraint1"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintHorizontal_bias="0"
        android:background="@drawable/white_radio">
        <ImageView
            android:id="@+id/image3"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/level_income_3" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image3"
            android:text="评论权益"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/image3"
            app:layout_constraintTop_toBottomOf="@id/text3"
            android:layout_marginTop="8dp"
            android:text="和水友一起嗨聊"/>
        <ImageView
            android:id="@+id/clock3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="#99FFFFFF"
            android:src="@drawable/icon_level_lock"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint4"
        android:layout_width="155dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/constraint2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/white_radio">
        <ImageView
            android:id="@+id/image4"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/level_income_4" />
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image4"
            android:text="发帖权益"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/image4"
            app:layout_constraintTop_toBottomOf="@id/text4"
            android:layout_marginTop="8dp"
            android:text="和大家分享快乐"/>
        <ImageView
            android:id="@+id/clock4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="#99FFFFFF"
            android:src="@drawable/icon_level_lock"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint5"
        android:layout_width="155dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/constraint3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintHorizontal_bias="0"
        android:background="@drawable/white_radio">
        <ImageView
            android:id="@+id/image5"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/level_income_5" />
        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image5"
            android:text="下载视频"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/image5"
            app:layout_constraintTop_toBottomOf="@id/text5"
            android:layout_marginTop="8dp"
            android:text="保存视频到本地"/>
        <ImageView
            android:id="@+id/clock5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="#99FFFFFF"
            android:src="@drawable/icon_level_lock"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>