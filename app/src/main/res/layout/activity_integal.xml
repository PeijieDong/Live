<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout     xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".View.Activity.user.IntegalActivity">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="5dp"
                android:src="@drawable/icon_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="#030303"
                android:text="金币"/>
            <ImageView
                android:id="@+id/help_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@drawable/bangzhu_icon"/>
        </RelativeLayout>
        <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="198dp"
                    android:background="@drawable/exp_back">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/task_center_virtual_big"/>

                    <TextView
                        android:id="@+id/currIntegal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前金币"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="45.5dp"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFE400"
                android:textSize="36sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="65dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/get_Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/score"
                tools:layout_editor_absoluteX="165dp"
                android:background="@drawable/white_radio200_stoke"
                android:text="立即兑换"/>
                </android.support.constraint.ConstraintLayout>

        <com.mymusic.music.DiyTab.TabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:tabIndicatorColor="@color/navi_title_color"
            app:tabIndicatorHeight="2dp"
            android:background="@color/white"
            app:tabSelectedTextColor="@color/navi_title_color"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            android:padding="5dp"
            android:layout_centerInParent="true"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>


    </LinearLayout>
    <LinearLayout
    android:id="@+id/bootom_chose"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:visibility="gone"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFEFEF"/>
        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:textColor="@color/navi_title_color"
            android:layout_alignParentRight="true"
            android:text="确定"/>
        <TextView
            android:id="@+id/cencel"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_gray_66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="取消"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFEFEF"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/picker"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:wheel_item_text_size="14sp"
        app:wheel_selected_item_text_color="#FF5252" />
    </LinearLayout>
</RelativeLayout>