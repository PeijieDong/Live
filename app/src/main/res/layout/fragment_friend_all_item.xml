<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F6">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/friend_item_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/friend_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            app:layout_constraintLeft_toRightOf="@id/friend_item_head"/>
        <TextView
            android:id="@+id/friend_item_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/friend_item_title"
            app:layout_constraintLeft_toRightOf="@id/friend_item_head"/>
        <TextView
            android:id="@+id/friend_item_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/friend_item_des"
            app:layout_constraintLeft_toRightOf="@id/friend_item_head"/>
        <TextView
            android:id="@+id/friend_item_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/friend_item_des"
            android:layout_marginLeft="14dp"
            app:layout_constraintLeft_toRightOf="@id/friend_item_focus"/>
        <TextView
            android:id="@+id/friend_all_bt"
            android:layout_width="60dp"
            android:layout_height="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="19dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/focus"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="+关注"/>
        <ImageView
            android:id="@+id/friend_all_down"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="5dp"
            android:layout_margin="16dp"
            android:src="@drawable/icon_arraw_close"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="gone"
        android:gravity="center_vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/friend_all_image1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/friend_all_num1"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/friend_all_image1"
                app:layout_constraintRight_toRightOf="@id/friend_all_image1"
                android:background="@drawable/back_friend_tv"/>
            <TextView
                android:id="@+id/friend_all_content1"
                android:layout_width="90dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:maxLines="2"
                android:ellipsize="end"
                android:padding="3dp"
                app:layout_constraintTop_toBottomOf="@id/friend_all_image1"
                android:background="@drawable/back_friend_all_content"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/friend_all_image2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/friend_all_num2"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/friend_all_image2"
                app:layout_constraintRight_toRightOf="@id/friend_all_image2"
                android:background="@drawable/back_friend_tv"/>
            <TextView
                android:id="@+id/friend_all_content2"
                android:layout_width="90dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:maxLines="2"
                android:ellipsize="end"
                android:padding="3dp"
                android:background="@drawable/back_friend_all_content"
                app:layout_constraintTop_toBottomOf="@id/friend_all_image2"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/friend_all_image3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/friend_all_num3"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/friend_all_image3"
                app:layout_constraintRight_toRightOf="@id/friend_all_image3"
                android:background="@drawable/back_friend_tv"/>
            <TextView
                android:id="@+id/friend_all_content3"
                android:layout_width="90dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:maxLines="2"
                android:ellipsize="end"
                android:padding="3dp"
                android:background="@drawable/back_friend_all_content"
                app:layout_constraintTop_toBottomOf="@id/friend_all_image3"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</LinearLayout>