<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".View.Activity.user.ExpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="5dp"
                android:src="@drawable/icon_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="#030303"
                android:text="经验值"/>
        </RelativeLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="198.5dp"
            android:background="#FE5252">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/task_center_expire_bg"/>

            <TextView
                android:id="@+id/currexp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前经验值"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="42.5dp"
                android:layout_marginLeft="32.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22.5dp"
                android:text="0"
                android:textColor="#FFE400"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/get_exp"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="@drawable/white_con"
                android:gravity="center"
                android:textColor="#EFEFEF"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="等级说明"/>
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="4.5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="73.5dp"
                android:max="100"
                android:progress="80"
                app:layout_constraintBottom_toBottomOf="parent"
                android:progressDrawable="@drawable/progress_type"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>
            <TextView
                android:id="@+id/des"
                android:layout_width="48dp"
                android:layout_height="20dp"
                android:textColor="@color/blank"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:paddingLeft="19dp"
                android:background="@drawable/vip_level"
                app:layout_constraintLeft_toLeftOf="@id/progress"
                app:layout_constraintBottom_toBottomOf="@id/progress"
                android:text="LV1"/>
            <TextView
                android:id="@+id/level"
                android:layout_width="48dp"
                android:layout_height="20dp"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"
                android:textColor="@color/blank"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingLeft="19dp"
                android:background="@drawable/vip_level"
                app:layout_constraintRight_toRightOf="@id/progress"
                app:layout_constraintBottom_toBottomOf="@id/progress"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/progress">
                <TextView
                    android:id="@+id/curr_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="100"/>
                <TextView
                    android:id="@+id/tol_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/blank"
                    android:text="/1000"/>
            </LinearLayout>
            <TextView
                android:id="@+id/instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center"
                android:maxWidth="172dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="25dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/Rc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>