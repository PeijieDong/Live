<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/themeBt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/signTv"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="@drawable/icon_home"
            android:text="#"/>
        <TextView
            android:id="@+id/home_rc_type"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/signTv"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="#FF5252"
            android:textSize="12sp"
            android:padding="5dp"
            android:background="@drawable/back_home_top" />
        <LinearLayout
            android:id="@+id/userBt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userHead"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="我是迷笛"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/icon_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="6dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_godown"/>
    </RelativeLayout>
    <include layout="@layout/home_rc_pic"/>
