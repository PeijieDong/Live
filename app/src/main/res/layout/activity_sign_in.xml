<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".View.Activity.SignInActivity">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:src="@drawable/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="#030303"
            android:text="签到"/>
    </RelativeLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:background="#FE5252">

        <TextView
            android:id="@+id/currSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已累积"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="38.5dp"
            android:layout_marginLeft="36.5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/get_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#FFE400"
            app:layout_constraintLeft_toRightOf="@id/currSign"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="25.5dp"
            android:layout_marginTop="35dp"
            android:textStyle="bold"
            android:text="0.3元"/>
        <LinearLayout
            android:layout_width="118.5dp"
            android:layout_height="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical|right"
            android:background="@drawable/is_sign_back">
            <TextView
                android:id="@+id/isSignDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="25dp"
                android:textSize="12sp"
                android:text="已签到"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/signInProgress"
            android:layout_width="match_parent"
            android:layout_height="4.5dp"
            android:max="100"
            android:progress="80"
            android:layout_marginTop="41.5dp"
            app:layout_constraintTop_toBottomOf="@id/get_money"
            android:progressDrawable="@drawable/progress_type"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>
        <com.mymusic.music.Util.SignInNavigation
            android:id="@+id/signIn_num"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="@id/signInProgress"
            app:layout_constraintBottom_toBottomOf="@id/signInProgress"
            app:layout_constraintVertical_bias="0.25"/>

        <TextView
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxWidth="230dp"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="20dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>