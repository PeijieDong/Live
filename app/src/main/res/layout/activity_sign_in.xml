<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Activity.SignInActivity">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:src="@drawable/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="#030303"
            android:text="签到"/>
    </RelativeLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:background="#FE5252">

        <TextView
            android:id="@+id/currSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已累积"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="38.5dp"
            android:layout_marginLeft="36.5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/get_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#FFE400"
            app:layout_constraintLeft_toRightOf="@id/currSign"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="25.5dp"
            android:layout_marginTop="35dp"
            android:textStyle="bold"
            android:text="0.3元"/>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="4.5dp"
            android:max="100"
            android:progress="80"
            android:layout_marginTop="41.5dp"
            app:layout_constraintTop_toBottomOf="@id/get_money"
            android:progressDrawable="@drawable/progress_type"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@id/get_money">

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <com.mymusic.music.DiyTab.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabIndicatorColor="@color/navi_title_color"
        app:tabIndicatorHeight="2dp"
        android:background="@color/white"
        app:tabSelectedTextColor="@color/navi_title_color"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        android:padding="5dp"
        android:layout_centerInParent="true"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>
</LinearLayout>