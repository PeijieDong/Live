<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F6"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:background="@color/white">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_head_cir"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/detail_head_cir"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#666" />
        <TextView
            android:id="@+id/detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/detail_name"
            app:layout_constraintLeft_toRightOf="@id/detail_head_cir"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:textColor="#999"/>
        <TextView
            android:id="@+id/detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/detail_time"
            app:layout_constraintLeft_toRightOf="@id/detail_head_cir"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#333"/>
        <ImageView
            android:id="@+id/comment_like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="15dp"
            android:src="@drawable/video_comment_favor_n"/>
        <TextView
            android:id="@+id/comment_likeNum"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/comment_like"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="13dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textSize="12sp" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>