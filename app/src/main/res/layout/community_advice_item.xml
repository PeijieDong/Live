<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/community_select_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <ImageView
        android:id="@+id/clear_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="5dp"
        app:layout_constraintRight_toRightOf="@id/community_select_image"
        app:layout_constraintTop_toTopOf="@id/community_select_image"
        android:src="@drawable/fq_ic_anchor_bottom_close"/>
</android.support.constraint.ConstraintLayout>