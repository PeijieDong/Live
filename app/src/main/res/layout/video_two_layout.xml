<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.mymusic.music.Util.MyVideoPlayer
        android:id="@+id/mp_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toTopOf="@id/video_des"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/head"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/video_des"
            android:text="这是标题"/>
        <TextView
            android:id="@+id/focus"
            android:layout_width="58dp"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/video_title"
            app:layout_constraintBottom_toTopOf="@id/video_des"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/focus" />
        <TextView
            android:id="@+id/video_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:text="我去这个屌"/>
        <ImageView
            android:id="@+id/more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:src="@drawable/post_comment_more"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/no_num"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:visibility="gone"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/noMoneyTitle"
            android:layout_width="240dp"
            android:layout_height="150dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:text="dsdsdsdsdsdsds"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/goLook"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/white_radio_stoke"
            android:textColor="#999"
            app:layout_constraintTop_toBottomOf="@id/noMoneyTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:text="10金币观看"/>
        <TextView
            android:id="@+id/goMoney"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/white_radio_stoke"
            android:textColor="#999"
            app:layout_constraintTop_toBottomOf="@id/noMoneyTitle"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="80dp"
            android:text="10金币观看"/>
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>