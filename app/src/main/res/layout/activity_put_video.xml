<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".View.Activity.post.PutVideoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:src="@drawable/back_close"/>
        <TextView
            android:id="@+id/post"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="@string/put_art"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="10dp"
        android:gravity="top"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        android:maxLength="50"
        android:hint="@string/put_content_hint2"/>
    <ImageView
        android:id="@+id/video_content"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:padding="15dp"
        android:src="@drawable/publish_video_s"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:text="仅支持上传30s以内视频"/>
    <RelativeLayout
        android:id="@+id/Contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/chose_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_icon"/>
        <LinearLayout
            android:id="@+id/chose_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/back_gray_radio">
            <ImageView
                android:id="@+id/chose_sign2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/tag_icon_grey" />
            <TextView
                android:id="@+id/have_chose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/null_sign"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>