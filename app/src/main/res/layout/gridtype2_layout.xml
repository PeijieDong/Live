<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <android.support.v7.widget.CardView
        android:id="@+id/typeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="110dp">
            <ImageView
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"/>
            <ImageView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:src="@drawable/fq_bottom_transparent"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/typeImage"
        app:layout_constraintRight_toRightOf="@id/typeImage"
        android:text="10.0"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:textColor="@color/blank"
        app:layout_constraintTop_toBottomOf="@id/typeImage"
        android:text="歌曲演唱者：林俊杰"/>
</android.support.constraint.ConstraintLayout>